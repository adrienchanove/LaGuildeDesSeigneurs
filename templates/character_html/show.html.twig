{% extends 'base.html.twig' %}

{% block title %}Personnage
{% endblock %}

{% block body %}
	<h1>Personnage</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ character.id }}</td>
			</tr>
			<tr>
				<th>Identifier</th>
				<td>{{ character.identifier }}</td>
			</tr>
			<tr>
				<th>Kind</th>
				<td>{{ character.kind }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ character.name }}</td>
			</tr>
			<tr>
				<th>Surname</th>
				<td>{{ character.surname }}</td>
			</tr>
			<tr>
				<th>Caste</th>
				<td>{{ character.caste }}</td>
			</tr>
			<tr>
				<th>Knowledge</th>
				<td>{{ character.knowledge }}</td>
			</tr>
			<tr>
				<th>Intelligence</th>
				<td>{{ character.intelligence }}</td>
			</tr>
			<tr>
				<th>Life</th>
				<td>{{ character.life }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>{{ character.image }}</td>
			</tr>
			<tr>
				<th>Creation</th>
				<td>{{ character.creation ? character.creation|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Modification</th>
				<td>{{ character.modification ? character.modification|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('character_html_index') }}">Revenir au tableau</a>

	<a href="{{ path('character_html_edit', {'id': character.id}) }}">Modifier</a>

	{{ include('character_html/_delete_form.html.twig') }}
{% endblock %}
